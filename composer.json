{
    "name": "gaurangsharma/gst-calculator",
    "description": "Simplifies GST calculation and operations",
    "keywords": [
        "gaurangsharma",
        "gst-calculator"
    ],
    "homepage": "https://github.com/gaurang-commits/gst-calculator",
    "license": "MIT",
    "authors": [
        {
            "name": "Gaurang Sharma",
            "email": "gaurang@iogravity.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Gaurang\\GstCalculator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gaurang\\GstCalculator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
